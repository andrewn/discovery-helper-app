{
  "name": "MediaScape Discovery Helper",
  "short_name": "mediscape-discovery-helper",
  "description": "Helps find radios on the local network",
  "manifest_version": 2,
  "version": "0.7",
  "app": {
    "background": {
      "scripts": [
        "lodash.js", 
        "dns.js", 
        "service-finder.js", 
        "background.js"
      ]
    }
  },
  "sockets": {
    "udp": { 
      "bind": "*", 
      "send": "*", 
      "multicastMembership": "" 
    }
  },
  "permissions": [ "system.network" ],
  "icons": { "128": "img/icon.png" }
}
